{
    "name": "@stefanoruth/env",
    "version": "1.0.0",
    "main": "dist/index.js",
    "repository": "https://github.com/stefanoruth/env.git",
    "author": "Stefano Ruth <stefanoruth@users.noreply.github.com>",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "mocha --require ts-node/register --require dotenv/config --recursive \"./src/**/*.test.ts\" --watch-files \"./src/**/*.ts\""
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.0",
        "chai": "^4.3.6",
        "dotenv": "^16.0.1",
        "mocha": "^10.0.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
