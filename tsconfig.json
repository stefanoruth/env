{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "alwaysStrict": true,
        "declaration": true,
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.ts", "dist"]
}
